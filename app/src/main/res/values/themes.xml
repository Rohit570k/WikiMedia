<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wikimedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- For customising bottom nav bar color and textsizes -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.Wikimedia.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <!-- set background of bottom nav bar. -->
        <item name="colorSurface">@color/backwhite</item>
        <!-- for item color . -->
        <item name="colorOnSurfaceVariant">#30436E</item>
        <!-- for active indicator  color . -->
        <item name="colorSecondaryContainer">#6C95C9FB</item>
    </style>
    <style name="navTextInactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="navTextActive">
        <item name="android:textSize">14sp</item>
    </style>


    <!-- for active indicator height and sizes . -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
<!--              <item name="android:color">@color/blue</item>-->
<!--        <item name="android:height">26dp</item>-->
        <item name="marginHorizontal">2dp</item>
    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
    <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
    <item name="itemTextAppearanceInactive">@style/navTextInactive</item>
    <item name="itemTextAppearanceActive">@style/navTextActive</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.Wikimedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


</resources>